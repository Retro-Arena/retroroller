# Template file for 'retroarch-odroidgo2'
pkgname=retroarch-odroidgo2
version=1.9.0
revision=35
_gitrev=f72bc60842304c2a3d16c11c068480ae537d0b4e
wrksrc="RetroArch-${_gitrev}"
build_style=configure
configure_args="--prefix=/usr
 --sysconfdir=/etc
 --disable-discord
 --disable-libusb
 --disable-sdl2
 --disable-vulkan
 --disable-vulkan_display
 --enable-git_version
 --enable-networking
 --enable-ozone
 --enable-egl
 --enable-kms
 --enable-odroidgo2
 --enable-ffmpeg
 --disable-mpv
 --enable-opengles
 --enable-opengles3
 --enable-wifi
"
conf_files="/etc/retroarch.cfg"
hostmakedepends="pkg-config unzip git rsync openssh"
makedepends="zlib-devel libxml2-devel freetype-devel libxkbcommon-devel
 librga-devel alsa-lib-devel eudev-libudev-devel libdrm-devel MesaLib-devel"
short_desc="Official reference frontend for the libretro API"
maintainer="valadaa48 <valadaa48@gmx.com>"
license="GPL-3.0-or-later"
homepage="http://www.libretro.com/"
distfiles="https://github.com/valadaa48/RetroArch/archive/${_gitrev}.tar.gz"
checksum=a16dce6e480157de4fd21639ee7ec18d19fde92413b0eec9df759d4ff2ec6076
patch_args="-Np1"

do_configure() {
	if [ "$CROSS_BUILD" ]; then
		configure_args+=" --host=${XBPS_CROSS_TRIPLET}"
	fi

	case "$XBPS_TARGET_MACHINE" in
		armv7*)
            configure_args+=" --enable-neon"
            ;;
    esac
	
    export CFLAGS="$CFLAGS -O3 -fno-tree-vectorize"
    export ASFLAGS="$CFLAGS"
	./configure ${configure_args}
}

pre_build() {
	vsed -i gfx/drivers_context/drm_go2_ctx.c -e "s:<drm/drm_fourcc.h>:<libdrm/drm_fourcc.h>:" 
	vsed -i deps/libgo2/src/display.c -e "s:<drm/drm_fourcc.h>:<libdrm/drm_fourcc.h>:" 
	vsed -i gfx/drivers/oga_gfx.c -e "s:<drm/drm_fourcc.h>:<libdrm/drm_fourcc.h>:" 
}

do_build() {
#    local _opts=""

#	case "$XBPS_TARGET_MACHINE" in
#		armv7*) _opts+="NEON_CFLAGS='-mfpu=neon-vfpv4 -mfloat-abi=hard' NEON_ASFLAGS='-mfpu=neon-vfpv4 -mfloat-abi=hard'";;
#    esac

    make -j$(nproc) GIT_VERSION=${_gitrev}
}

post_install() {
    vinstall ${FILESDIR}/retroarch.cfg 644 etc
    vinstall ${FILESDIR}/go_advance_gamepad.cfg 644 usr/share/retroarch
    vinstall ${FILESDIR}/go_advance_gamepad_v11.cfg 644 usr/share/retroarch
    vinstall ${FILESDIR}/go_super_gamepad.cfg 644 usr/share/retroarch
    vsv retroarch
}

