# Template file for 'rr-base'
pkgname=rr-base
version=1.7.1
revision=1
archs="aarch64"
create_wrkdir=true
short_desc="retroroller base"
maintainer="valadaa48 <valadaa48@gmx.com>"
license="GPL-2.0-or-later"
homepage="https://github.com/valadaa48"
depends="p7zip unzip NetworkManager SDL2-2.0.10-go2 xtools librga libgo2 libmali-bifrost-gbm ogage ppsspp-odroidgo2 dialog linux-firmware-network spring-rrvl retrorun-go2 duckstation-go2"
conf_files="/boot/boot.ini /etc/NetworkManager/conf.d/wifi-powersave-off.conf"

do_install() {
    cd ${FILESDIR}
    vinstall boot.ini 644 boot
    vinstall logo.bmp 644 boot

    vinstall wifi-powersave-off.conf 644 etc/NetworkManager/conf.d

    # scripts
    vinstall update.sh 755 usr/share/rrvl/scripts
    vinstall reset_ppsspp.sh 755 usr/share/rrvl/scripts

    vinstall 50-oga-suspend.sh 755 etc/zzz.d/suspend
    vinstall 50-oga-resume.sh 755 etc/zzz.d/resume

    vinstall 50-oga.rules 644 usr/lib/udev/rules.d

    vbin firstboot.sh
    vbin onboot.sh
    vbin setfreq
    vbin performance
    vbin arm-xbps
    vbin update
    vbin termwrap
    vbin ogainfo
    vbin retrorun32
    vbin retrorun64
    vbin retroarch32
    vbin dark
}
